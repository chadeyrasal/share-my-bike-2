<h2>Login to your account</h2>

<%= form_tag(sessions_path) do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag("Login") %>
<% end %>

<br><br>

or <%= link_to "Log in with Facebook", "/auth/facebook" %>
