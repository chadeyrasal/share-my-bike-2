<h2>Rent this bicycle</h2>
<%= link_to @bicycle.title, bicycle_path(@bicycle) %> at Â£<%= @bicycle.price %> per day

<%= form_for [@bicycle, @trip] do |f| %>

  <%= render partial: "trips/trip_errors" %>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date %>
  </div><br>

  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </div><br>

  <%= f.hidden_field :bicycle_id %>

  <%= f.hidden_field :renter_id %>

  <div class="field-action">
    <%= f.submit "Rent this bicycle" %>
  </div>

<% end %>
